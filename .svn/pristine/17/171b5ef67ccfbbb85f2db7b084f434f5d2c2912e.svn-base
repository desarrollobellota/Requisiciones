:host {
    font-family:  "Roboto";
    color: #333;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .toolbar {
    width: 100%;
    position: fixed;
    z-index: 100;
    height: 90px;
    display: flex;
    align-items: center;
    background-color: white;
    color: white;
    font-weight: 600;
  }

  .boton-menu{
    background-color: #d62d20;
    margin-left: 2%;
  }

  .logo{
    margin-left: 2%;
    margin-top: 5%;
    width: 300px;
    height: 60px;
  }

  .tituloBanner{
    color: #333;
    padding: 10%;
    font-size: 100%;
    text-align: center;
    }
  .contenido{
  padding-top: 95px;
  position: relative;
  }

  h1, h2, h3, h4, h5, h6 {
    margin: 8px 0;
  }

  li{
    list-style-type:none;
    position:relative;
    width:120px;
    margin:2%;
    }
                
    li a{
    display:inline-block;
    padding:2%;
    width:100%;
    height:60px;
    border:1px solid #000;
    color:#fff;
    background-color:#000;
    }
            
    li a:hover{
    color:#000;
    background-color:#fff;
    margin:2%;
    bottom: 1%;        
    }
    
    li ul{
        display:none;
        position:absolute;
        top:0px;
        left:100px;
    }
            
    li:hover ul{display:block;}








 nav a{
   color: red;
 }
 .Activado{
font-weight: bold;
color: red;
 }



@keyframes ui-progress-spinner-color {
  100%,
  0% {
      stroke: #d62d20;
  }
  40% {
      stroke: hsl(61, 98%, 49%);
  }
  66% {
      stroke: #2ff12f;
  }
  80%,
  90% {
      stroke: #0a0700;
  }


}

.vertical-menu {
  width:100%;
 
}

.vertical-menu a {
  background-color: white;
  color: black;
  display: block;
  padding: 12px;
  border-color: white;
}

.vertical-menu a:hover {
  background-color: #ec493d;
  color:white;
  margin:10px 10px 0 0;
}

.vertical-menu a.active {
  background-color: #d62d20;
  color: white;
}
